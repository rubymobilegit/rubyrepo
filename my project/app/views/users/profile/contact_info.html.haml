- content_for :javascripts do
  = javascript_include_tag "#{params[:controller]}/multiselect"

- content_for :javascripts do
  :javascript
    $(function () {
      initFormToggler($('#edit-profile'), $('#cancel-edit-profile'), $('#customer-profile'), #{action_name == "update_contact_info" ? 1 : 0})
      initFormToggler($('#edit-password'), $('#cancel-edit-passowrd'), $('#customer-password'), #{action_name == "update_password" ? 1 : 0})
    });

- content_for :sub_nav do
  = render 'sub_nav', :active_action=>'contact_info', :active_controller=>'profile'

= render 'users/shared/header_score'
- content_for :main_column do
  %section.default-content
    %h3
      CONTACT INFO DETAILS
      - tip = "This is the contact information vendors will receive upon winning a MuddleMe auction for your contact information."
      = image_tag 'pixel.gif', :class=>'qmark', :title=>tip
      %a.orange-link#edit-profile edit
    %hr
    %article.narrowed.details-preview#customer-profile
      = render 'form_contact'
    %h3
      PASSWORD
      %a.orange-link#edit-password change password
    %hr
    %article.narrowed.details-preview#customer-password
      = render 'form_password'
%h2 My Contact Info
= render 'layouts/application/one_column'
