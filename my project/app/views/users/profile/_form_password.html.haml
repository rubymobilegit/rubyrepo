= simple_form_for current_user, :url=>{:action=>:update_password}, |
  :wrapper=>:standard, :validate => true, :html=>{:class=>'no-label clearfix', :id => "edit_user_password"} do |f|

  %div.line
    %div.label Current password:
    %div.value.to-hide ******
    %div.to-show{:style=>"display: none;"}
      = no_label_input f, :current_password, :placeholder => false
  %div.line.to-show{:style=>"display: none;"}
    %div.label New password:
    %div.to-show
      = no_label_input f, :password, :placeholder => false
  %div.line.to-show{:style=>"display: none;"}
    %div.label Confirm new password:
    %div.to-show
      = no_label_input f, :password_confirmation, :placeholder => false

  .actions{:style=>"display: none;"}
    = f.button :submit, 'Change password', :class => "fixed-width-button"
    %a#cancel-edit-passowrd.fixed-width-button.gray-button Cancel Changes
