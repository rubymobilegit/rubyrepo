.popup-window.couponSubmit
  .field
    %h3
      Help millions of shoppers save
      %br>/
      and make money along the way!
  = form_tag user_save_coupon_profile_url, :class => 'user-coupon-form navbar-form', :multipart => true, :remote => true, :id => 'user_coupon_form',:onsubmit => "return false" do
    #processing-message
    #all-form-errors.text-center.text-danger
    = hidden_field_tag :advertisable_id, @advertiser.id
    = hidden_field_tag :advertisable_type, params[:type]
    .field
      %label Store Website:
      = text_field_tag :store_website, "#{@store_link}", :placeholder => 'storewebsite.com',  :class => "form-control"
    .field
      %label Offer Type: 
    = link_to 'Offer Code', 'javascript:void(0);', :class => 'offer-type orange-button-link btn btn-default'
    = link_to 'Printable Coupon', 'javascript:void(0);', :class => 'offer-type btn btn-default'
    = link_to 'Sales/Shopping Tip', 'javascript:void(0);', :class => 'offer-type btn btn-default'
    = hidden_field_tag :offer_type, 'Offer Code', :class => 'offer-type-hidden btn btn-default'
    .field.printable-coupon-file-field
      = file_field_tag :printable_coupon, :onchange=>"UpdatePreview(this);"
    .field
      %label Code:
      = text_field_tag :code, '', :placeholder => 'e.g. mm2014ab',  :class => "code form-control"
    .field
      %label Discount Description:
      = text_area_tag :discount_description, '', :placeholder => 'e.g. 10% off on all shoes, accessories at example.com. Excludes sales tax. Expires 2/12/2020',  :class => "form-control"
    .field
      %label Expiration Date: (optional)
      = text_field_tag :expiration_date, '', :style => "width: 250px;", :placeholder => 'mm/dd/yy',  :class => "form-control datepicker2"
    .field
      = recaptcha_tags :ajax => true
    .subBtn
      = button_tag 'Submit', :type=>'button', :class => 'orange-button user-coupon-submit-btn-new btn btn-primary-custom'
      = button_tag 'Preview', :type=>'button', :class => 'orange-button user-coupon-preview-btn-new btn btn-primary-custom'
    
 

:css
  #recaptcha_area{ margin: 0 auto; }
  a.orange-button-link { color: #000; text-decoration: none; }
  a.orange-button-link:hover{ color: #000; text-decoration: none; }
  .label-p{ text-align: left; width: 280px; font-weight: bold; }
  .printable-coupon-file-field{ display: none; }
