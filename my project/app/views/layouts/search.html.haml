%head
  %meta{ :charset => "utf-8" }/
  %meta{ 'http-equiv' => 'X-UA-Compatible', :content => 'IE=edge,chrome=1' }/
  %title= "Muddleme - #{ yield(:title).blank? ? controller.action_name.titleize : yield(:title) }"
  %meta{ :name => "description", :content => "" }/
  %meta{ :name => "author", :content => "" }/
  %meta{ :name => "viewport", :content => "width=device-width,initial-scale=1" }/

  //    = render :partial => 'layouts/application/google_analytics'
  = javascript_include_tag 'search/search'
  = stylesheet_link_tag 'search'
  / = javascript_include_tag "search/#{action_name}"
  = stylesheet_link_tag "search/#{action_name}"
  - if is_mobile?
    = stylesheet_link_tag "search/mobile/#{action_name}"
    = stylesheet_link_tag 'search/mobile/mm-widgets'

  = csrf_meta_tag
  %body
    = yield