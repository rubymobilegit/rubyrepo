%header#header
  %div.row
    %div.column
      %a{:href => company_path}
        %h1#company-logo.ir Muddle Me
    - if current_vendor.nil?
      %nav#main-nav.clearfix{:style => 'float: left;'}
        %ul
          %li{:class=>"#{current_page?(root_path)?'active':''}"}
            %a{:href => '/'} Home
          %li{:class=>"#{current_page?('/experience')?'active':''}"}
            %a{:href => '/experience'} Experience
          %li{:class=>"#{current_page?('/referral')?'active':''}"}
            %a{:href => '/referral'} Referral
          %li{:class=>"#{current_page?('/company')?'active':''}"}
            %a{:href => '/company'} Business
          %li{:class=>"#{current_page?(about_path)?'active':''}"}
            %a{:href => about_path} About Us
          %li
            %a{:href => 'http://muddleme.blog.com', :target => 'blank'} Blog
    %div#navigation-area
      = render :partial => 'layouts/vendors/account_bar'
      = render :partial => 'layouts/vendors/navigation_bar'
