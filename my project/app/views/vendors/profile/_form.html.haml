- content_for :javascripts do
  :javascript
    $(function(){
      $('select#vendor_state_abbreviation').multiselect({
        header: false,
        selectedList: 1,
        height: "auto",
        minWidth: "160",
        multiple: false,
        classes: "multiselect-button multiselect-dropdown",
        position: {
          my: 'left top',
          at: 'left top'
        }
      });  
    });

= simple_form_for current_vendor, :url=>{:action=>:update}, |
  :wrapper=>:standard, :validate => true, :html=>{:class=>'no-label clearfix'} do |f|

  %div.line
    %div.label Company name:
    %div.value.to-hide= current_vendor.company_name_was
    %div.to-show{:style=>"display: none;"}
      = no_label_input f, :company_name

  %div.line
    %div.label First name:
    %div.value.to-hide= current_vendor.first_name_was
    %div.to-show{:style=>"display: none;"}
      = no_label_input f, :first_name

  %div.line
    %div.label Last name:
    %div.value.to-hide= current_vendor.last_name_was
    %div.to-show{:style=>"display: none;"}
      = no_label_input f, :last_name

  %div.line
    %div.label E-mail address:
    %div.value.to-hide= current_vendor.email_was
    %div.to-show{:style=>"display: none;"}
      = no_label_input f, :email

  %div.line
    %div.label Address:
    %div.value.to-hide= current_vendor.address_was
    %div.to-show{:style=>"display: none;"}
      = no_label_input f, :address

  %div.line
    %div.label City:
    %div.value.to-hide= current_vendor.city_was
    %div.to-show{:style=>"display: none;"}
      = no_label_input f, :city


  %div.line
    %div.label Zip code:
    %div.value.to-hide= current_vendor.zip_code_was
    %div.to-show{:style=>"display: none;"}
      = no_label_input f, :zip_code

  %div.line
    %div.label State:
    %div.value.to-hide= current_vendor.state_abbreviation_was
    %div.to-show{:style=>"display: none;"}
      = no_label_input f, :state_abbreviation, :collection => ['']+STATE_ABBREVIATIONS, :prompt => "state..", :input_html => { :"data-fade-error" => 'true' }

  %div.line
    %div.label Phone:
    %div.value.to-hide= current_vendor.phone_was
    %div.to-show{:style=>"display: none;"}
      = no_label_input f, :phone


  %div.line
    %div.label Website URL:
    %div.value.to-hide= current_vendor.website_url_was
    %div.to-show{:style=>"display: none;"}
      = no_label_input f, :website_url

  %div.line
    %div.label Review site URL:
    %div.value.to-hide= current_vendor.review_url_was
    %div.to-show{:style=>"display: none;"}
      = no_label_input f, :review_url, :hint=>true

  .actions{:style=>"display: none;"}
    = f.button :submit, 'Save changes', :class => "fixed-width-button"
    %a#cancel-edit-profile.fixed-width-button.gray-button Cancel Changes