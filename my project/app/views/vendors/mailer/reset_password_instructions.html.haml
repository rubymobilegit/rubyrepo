- content_for :hello_text do
  Hello #{@resource.first_name}!

- content_for :hello_sub_text do
  Someone has requested a link to change your password, and you can do this through the link below.

- content_for :main_content do
  %table{:width => "100%", :border=> "0", :cellpadding => "0", :cellspacing => "0"}
    %tr
      %td{:align=>'center'}
        = link_to 'Change my password', edit_vendor_password_url(:reset_password_token => @resource.reset_password_token)
    %tr
      %td{:height=>25, :style => "font-size: 1px;"}
    %tr
      %td{:align=>'left', :style => "font-size: 16px; color: #666666; font-family: helvetica;"}
        If you didn't request this, please ignore this email.
        Your password won't change until you access the link above and create a new one.

= render 'layouts/application/basic_email', :for_vendor=>true