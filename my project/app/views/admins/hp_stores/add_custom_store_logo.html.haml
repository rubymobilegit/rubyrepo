- content_for :sub_nav do
  = render 'admins/sub_nav', :active_action=>'index', :active_controller=>'admins/custom_advertisers'
- content_for :main_column do
  %section.default-content
    = simple_form_for :hp_advertiser_image, :html => { :multipart => true }, :url => create_custom_store_logo_admin_hp_stores_path, :method => "post" do |f|
      %p Select Image to add a store logo for merchant
      %p= f.file_field :hp_image
      = hidden_field_tag :adv_id, params[:adv_id]
      = hidden_field_tag :adv_type, params[:adv_type]
      = hidden_field_tag :store_type, params[:store_type]
      %p= f.button :submit, 'Add Store Logo', :class => 'fixed-width-button'
    %p= link_to 'Back', admin_hp_stores_path(:type => params[:store_type]), :class=>'orange-button'
%h2 Add Store Logo for merchant
= render 'layouts/application/one_column'
