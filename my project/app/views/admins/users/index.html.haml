- content_for :sub_nav do
  = render 'admins/sub_nav', :active_action=>'index', :active_controller=>'admins/users'

- content_for :main_column do
  %section.default-content.clearfix
    %nav.with-search
      = form_tag(admin_users_path, :method=>:get, :remote=>true, :id => "users-filters") do
        %div.fields
          = text_field_tag 'search', params['search'], :class=>'search-field', :placeholder=>'Search Customers'
        = submit_tag "filter"
    #all_users_wrap
      = render 'user_list', :type=>:all, :single=>true

%h2 Customers
= render 'layouts/application/one_column'

- content_for :javascripts do
  %script
    :plain
      simpleAjaxPagination('#all_users_wrap');